<%-include('../../partials/header')%>
<%-include('../../partials/navbar')%>
<div class="container">
  <div class="card">
    <div class="card-body">
      <div class="card-title"><h2>Edição de categoria</h2></div>
      <form method="POST" action="/categories/update">
        <input
          type="text"
          name="title"
          placeholder="Defina o titulo da categoria"
          class="form-control"
          value="<%=category.title%>"
        />
        <input type="hidden" name="id" value="<%=category.id%>">
        <br />
        <button class="btn btn-sucess">Atualizar</button>
      </form>
    </div>
  </div>
</div>
<%-include('../../partials/footer')%>
